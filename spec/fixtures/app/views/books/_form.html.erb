 <%= form_for(@book, :html => {class: "form-horizontal", role: "form", remote: true}) do |f| %>
  <div class="form-group">
    <%= f.label :title %><br/>
    <%= f.text_field :title, class: "form-control", placeholder: "Book Title", autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :description %><br/>
    <%= f.text_area :description, class: "form-control", placeholder: "Book Description", autofocus: true %>
  </div>

  <%= render "forms/acts_as_ocenieable_form", form: f %>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary btn-large' %>
  </div>
<% end %>
